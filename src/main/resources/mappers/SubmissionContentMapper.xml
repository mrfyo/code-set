<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.feyon.codeset.mapper.SubmissionContentMapper">
    <resultMap id="resultMap" type="com.feyon.codeset.entity.SubmissionContent">
        <id jdbcType="INTEGER" column="id" javaType="integer" property="id"/>
        <result jdbcType="INTEGER" column="submission_id" javaType="integer" property="submissionId"/>
        <result jdbcType="OTHER" column="content" javaType="string" property="content" />
    </resultMap>


    <insert id="insert" parameterType="com.feyon.codeset.entity.SubmissionContent" useGeneratedKeys="true" keyProperty="id"
            keyColumn="id">
        insert into `submission_content`(submission_id, content)
        VALUES (#{submissionId}, #{content});
    </insert>

    <delete id="deleteById" parameterType="integer">
        delete
        from `submission_content`
        where id = #{id};
    </delete>

    <update id="update" parameterType="com.feyon.codeset.entity.SubmissionContent">
        update `submission_content`
        set
        <if test="submissionId != null">
            submission_id = #{submissionId},
        </if>
        content = #{content}
        where id = #{id};
    </update>

    <select id="findById" parameterType="integer" resultMap="resultMap">
        select *
        from `submission_content`
        where id = #{id};
    </select>

    <select id="findAllById" resultMap="resultMap">
        select * from submission_content where id in
        <foreach collection="ids" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>;
    </select>

    <select id="findAll" resultMap="resultMap">
        select *
        from `submission_content`;
    </select>
</mapper>